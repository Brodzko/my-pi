{
  "name": "@pi/gl-cli",
  "version": "0.1.0",
  "description": "Portable GitLab review CLI for agent-assisted code review workflows",
  "type": "module",
  "bin": {
    "gl": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "tsc": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "citty": "0.1.6",
    "zod": "3.24.2",
    "zod-to-json-schema": "3.24.3"
  },
  "devDependencies": {
    "@types/node": "22.13.5",
    "eslint": "9.21.0",
    "prettier": "3.5.3",
    "tsdown": "0.21.0-beta.2",
    "typescript": "5.7.3",
    "vitest": "3.0.7"
  }
}
